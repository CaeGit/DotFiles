#bindsym $mod+Shift+n gaps inner all set 0

# Turn On Gaps
#bindsym $mod+Shift+x gaps inner all set 15

# Drag Windows
floating_modifier $mod

# Start Terminal
bindsym $mod+Return exec urxvt
#bindsym $mod+Return exec xfce4-terminal

# Start Firefox
